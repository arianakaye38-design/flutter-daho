rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload and read their own profile images
    match /profile_images/{userId} {
      allow read: if true; // Anyone can read profile images
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to upload and read their own profile images (with extension)
    match /profile_images/{userId}.{ext} {
      allow read: if true; // Anyone can read profile images
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Allow owners to upload product images
    match /product_images/{userId}/{fileName} {
      allow read: if true; // Anyone can read product images (for catalog)
      allow write: if request.auth != null 
                   && request.auth.uid == userId // Owner can only upload to their own folder
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Deny all other access by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
